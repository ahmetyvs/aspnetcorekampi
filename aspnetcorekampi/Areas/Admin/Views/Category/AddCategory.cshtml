@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Yeni Kategori Girişi</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        <div class="form-group">
            @Html.Label("Kategorinin Adı")
            @Html.TextBoxFor(b => b.CategoryName, new { placeholder = " ", @class = "form-control" })
            @Html.ValidationMessageFor(b => b.CategoryName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Kategori Açıklaması")
            @Html.TextAreaFor(b => b.CategoryDescription, new { placeholder = " ", @class = "form-control" })
            @Html.ValidationMessageFor(b => b.CategoryDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <button class="btn btn-success">Kategoriyi Kaydet</button>
}

