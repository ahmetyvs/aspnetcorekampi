@using EntityLayer.Concrete
@model List<Blog>

<div class="blog-grids row mb-3">
    @foreach (var item in Model)
    {
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/BlogReadAll/@item.BlogID">
                <img src="@item.BlogThumbnailImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 50).LastIndexOf(" ")) ... </a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                </span>
            </div>
        </div>
    }
</div>
