@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h2>Mesaj Detay Sayfası</h2>
<div class="form-group">
    <div class="form-group">
        @Html.Label("Mesaj ID")
        @Html.TextBoxFor(b => b.MessageID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Mesaj Başlığı")
        @Html.TextBoxFor(b => b.Subject, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        @Html.TextAreaFor(b => b.MessageDetails, 5, 3, new { @class = "form-control", disabled = "disabled" })
    </div>
    <a href="/Message/InBox/" class="btn btn-dark btn-sm"> Mesajlara Dön </a>
</div>

@section Editor
    {
    <!-- summernote -->
    <link href="~/writer/summernote/summernote-bs4.css" rel="stylesheet" />
    <!-- Summernote -->
    <script src="~/writer/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#MessageDetails').summernote()
        })
    </script>
}