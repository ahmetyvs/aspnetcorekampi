@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Gelen Kutusu</h4> <!--Son bloğu çekmek için BlogLast3Post örneğinden yararlan (Yapınca bu notu sil) -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Konu </th>
                                <th> Gönderen </th>
                                <th> Tarih </th>
                                <th> Mesajı Aç </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MessageID</td>
                                    <td>@item.Subject</td>
                                    <td>@item.SenderUser.WriterName</td>
                                    <td> @item.MessageDate.ToShortDateString()</td>
                                    <td> <a href="/Message/MessageDetails/@item.MessageID" class="btn btn-dark btn-sm"> Detaylar </a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

